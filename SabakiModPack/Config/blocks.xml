<configs>
	<append xpath="/blocks/block[@name='forge']/property[@name='AcceptedItems']/value">
		<value>resourceClaySoilBulk</value>
		<value>resourceBrassBulk</value>
		<value>resourceCoalBulk</value>
		<value>resourcePotassiumNitratePowderBulk</value>
		<value>resourceSandBulk</value>
		<value>resourceBrokenGlassBulk</value>
	</append>  
	<set xpath="/blocks/block[@name='forge']/property[@name='StorageSlots']/@value">6</set>
	
	<append xpath="/blocks/block[@name='steelShapes']">
		<property class="UpgradeBlock">
		<property name="ToBlock" value="sabakiBrickShapes"/>
		<property name="Item" value="resourceForgedSteel"/>
		<property name="ItemCount" value="1"/>
			<property name="UpgradeHitCount" value="4"/>
		</property>
	</append>
	
	<block name="sabakiBladeTrap">
		<property name="Extends" value="bladeTrap"/>
		<property name="CreativeMode" value="Player"/>
		<property name="UnlockedBy" value="craftingTraps"/>
		<property name="Material" value="MsabakiBladeTrap"/>
		<property name="MaxDamage" value="15000"/>
		<property name="Damage" value="300"/>
		<property name="CustomIcon" value="bladeTrap"/>
		<property name="CustomIconTint" value="ff69b4"/>
		<property name="EconomicValue" value="2500"/>
		<property class="RepairItems">
			<property name="resourceForgedSteel" value="1"/>
		</property>
		<property name="SortOrder1" value="B155"/>
		<property name="SortOrder2" value="0021"/>
		<property name="Group" value="Science,TCScience"/>
		<property name="Tags" value="trapsSkill"/>
		<property name="FilterTags" value="MC_playerBlocks,SC_electrical,SC_traps"/>
	</block>  
	
	<block name="sabakiElectricFencePost">
