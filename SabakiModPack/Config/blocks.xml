    <!-- sabakiFrameShapes -->
    <block name="sabakiFrameShapes" shapes="All">
		<property name="Extends" value="woodFrameShapes"/>
		<property name="Material" value="MsabakiFrameBlocks"/>
		<property name="Texture" value="65"/>
		<property name="UiBackgroundTexture" value="65"/>
		<property name="EconomicValue" value="10"/>
		<property name="EconomicBundleSize" value="20"/>
		<property name="FuelValue" value="100"/>
		<property name="CanPickup" value="true"/>
		<property class="UpgradeBlock">
			<property name="ToBlock" value="sabakiBrickShapes"/>
			<property name="Item" value="resourceForgedSteel"/>
			<property name="ItemCount" value="1"/>
			<property name="UpgradeHitCount" value="4"/>
		</property>
		<property class="RepairItems">
			<property name="resourceWood" value="1"/>
		</property>
		<property name="UpgradeSound" value="place_block_metal"/>
		<property name="SortOrder1" value="S070"/>
		<property name="Tags" value="wood"/>
		<property name="Group" value="Basics,Building,advBuilding"/>
		<property name="FilterTags" value="MC_Shapes"/>		
		<drop event="Harvest" name="resourceWood" prob="1" count="25" tag="allHarvest"/>
		<drop event="Harvest" name="resourceForgedSteel" prob="1" count="10" tag="allHarvest"/>
		<drop event="Harvest" name="resourceForgedIron" prob="1" count="10" tag="allHarvest"/>
    </block>
	
	<!-- sabakiBrickShapes -->	
	<block name="sabakiBrickShapes" shapes="All">
		<property name="Extends" value="concreteShapes"/>
		<property name="Material" value="MsabakiBrickBlocks"/>
		<property name="DisplayType" value="blockHardened"/>
		<property name="Texture" value="7"/>
		<property name="UiBackgroundTexture" value="7"/>
		<property name="EconomicValue" value="500"/>
		<property name="SortOrder1" value="S040"/>
		<property name="Group" value="Building,advBuilding"/>
		<property name="FilterTags" value="MC_Shapes"/>
		<property class="RepairItems">
			<property name="resourceForgedSteel" value="1"/>
		</property>
		<drop event="Harvest" name="resourceForgedSteel" prob="1" count="50" tag="allHarvest"/>
		<drop event="Harvest" name="resourceForgedIron" prob="1" count="50" tag="allHarvest"/>
		<drop event="Harvest" name="resourceMechanicalParts" prob="1" count="25" tag="allHarvest"/>
		<drop event="Harvest" name="resourceElectricParts" prob="1" count="25" tag="allHarvest"/>
		<drop event="Harvest" name="resourceRepairKit" prob="1" count="10" tag="allHarvest"/>
		<drop event="Harvest" name="resourceLegendaryParts" prob="1" count="1" tag="allHarvest"/>
		<drop event="Harvest" name="resourceOil" prob="1" count="100" tag="allHarvest"/>
		<drop event="Harvest" name="resourceCoalBundle" prob=".1" count="1" tag="allHarvest"/>
	</block>	
</configs>